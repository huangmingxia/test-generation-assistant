# ============================================================================
# Test Generation Assistant - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file with real credentials

# ----------------------------------------------------------------------------
# GitHub Configuration
# ----------------------------------------------------------------------------

# Your GitHub fork owner (username or organization)
# Used for: Repository setup, PR submission
# Example: GITHUB_FORK_OWNER=your-username
GITHUB_FORK_OWNER=

# GitHub Personal Access Token (optional, if using gh CLI)
# Used for: Creating PRs, accessing private repositories
# Scopes needed: repo, workflow
# Example: GITHUB_TOKEN=ghp_xxxxxxxxxxxxx
GITHUB_TOKEN=

# ----------------------------------------------------------------------------
# JIRA Configuration
# ----------------------------------------------------------------------------

# JIRA Server URL
# Used for: Fetching JIRA issue details
# Example: JIRA_SERVER=https://issues.redhat.com
JIRA_SERVER=https://issues.redhat.com

# JIRA Personal Access Token
# Used for: API authentication
# Example: JIRA_TOKEN=xxxxxxxxxxxxx
JIRA_TOKEN=

# JIRA Username (alternative to token)
# Used for: Basic authentication
# Example: JIRA_USERNAME=your-email@redhat.com
JIRA_USERNAME=

# JIRA Password (alternative to token)
# Used for: Basic authentication
# Example: JIRA_PASSWORD=your-password
JIRA_PASSWORD=

# ----------------------------------------------------------------------------
# OpenShift/Kubernetes Configuration
# ----------------------------------------------------------------------------

# Kubeconfig file path for test execution
# Used for: Running E2E tests against OpenShift clusters
# Example: KUBECONFIG=/path/to/kubeconfig
KUBECONFIG=

# OpenShift Cluster API URL (optional)
# Used for: Direct API access
# Example: OPENSHIFT_API_URL=https://api.cluster.example.com:6443
OPENSHIFT_API_URL=

# OpenShift Admin Token (optional)
# Used for: API authentication
# Example: OPENSHIFT_TOKEN=sha256~xxxxxxxxxxxxx
OPENSHIFT_TOKEN=

# ----------------------------------------------------------------------------
# Repository Paths
# ----------------------------------------------------------------------------

# Path to openshift-tests-private repository (local)
# Used for: E2E test generation and execution
# Example: OPENSHIFT_TESTS_PRIVATE_PATH=/Users/username/openshift-tests-private
OPENSHIFT_TESTS_PRIVATE_PATH=

# Path to product repository (e.g., openshift/hive)
# Used for: Future E2E test generation in product repos
# Example: PRODUCT_REPO_PATH=/Users/username/hive
PRODUCT_REPO_PATH=

# ----------------------------------------------------------------------------
# Test Execution Configuration
# ----------------------------------------------------------------------------

# Default test timeout in minutes
# Used for: E2E test execution timeout
# Example: TEST_TIMEOUT=60
TEST_TIMEOUT=60

# Default test platform
# Used for: E2E test execution platform selection
# Options: AWS, Azure, GCP, VSphere, BareMetal, Nutanix, IBMCloud
# Example: TEST_PLATFORM=AWS
TEST_PLATFORM=AWS

# Test parallel execution count
# Used for: Number of parallel test executions
# Example: TEST_PARALLEL=1
TEST_PARALLEL=1

# ----------------------------------------------------------------------------
# AI/LLM Configuration (Optional)
# ----------------------------------------------------------------------------

# API endpoint for local LLM (if using)
# Used for: Code generation, test case generation
# Example: LLM_API_URL=http://localhost:11434
LLM_API_URL=

# API port for local services
# Used for: Test generation assistant API
# Example: API_PORT=8000
API_PORT=8000

# ----------------------------------------------------------------------------
# Output Configuration
# ----------------------------------------------------------------------------

# Base directory for test artifacts
# Used for: Storing generated test cases, code, and reports
# Example: TEST_ARTIFACTS_DIR=./test_artifacts
TEST_ARTIFACTS_DIR=./test_artifacts

# Enable debug logging
# Used for: Verbose output during execution
# Example: DEBUG=true
DEBUG=false

# ----------------------------------------------------------------------------
# Git Configuration
# ----------------------------------------------------------------------------

# Base commit SHA for openshift-tests-private
# Used for: Creating consistent branches
# Example: BASE_COMMIT_SHA=82d71408f07a848da3ded327cd0a0a0e39cb0138
BASE_COMMIT_SHA=82d71408f07a848da3ded327cd0a0a0e39cb0138

# Git author name for automated commits
# Used for: Setting commit author
# Example: GIT_AUTHOR_NAME=Test Generator Bot
GIT_AUTHOR_NAME=

# Git author email for automated commits
# Used for: Setting commit author email
# Example: GIT_AUTHOR_EMAIL=bot@example.com
GIT_AUTHOR_EMAIL=

# ----------------------------------------------------------------------------
# Component-Specific Configuration
# ----------------------------------------------------------------------------

# Default component for test generation
# Used for: Determining test file locations
# Options: hive, cloudcredential, installer, etc.
# Example: DEFAULT_COMPONENT=hive
DEFAULT_COMPONENT=hive

# Component-specific test paths (JSON format)
# Used for: Locating test files by component
# Example: COMPONENT_TEST_PATHS='{"hive":"test/extended/cluster_operator/hive","cloudcredential":"test/extended/cluster_operator/cloudcredential"}'
COMPONENT_TEST_PATHS=

# ----------------------------------------------------------------------------
# Notification Configuration (Optional)
# ----------------------------------------------------------------------------

# Slack webhook URL for notifications
# Used for: Sending test execution notifications
# Example: SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxx
SLACK_WEBHOOK_URL=

# Email notification settings
# Used for: Sending test reports via email
# Example: NOTIFICATION_EMAIL=team@example.com
NOTIFICATION_EMAIL=

# ----------------------------------------------------------------------------
# Advanced Configuration
# ----------------------------------------------------------------------------

# Maximum retry attempts for failed operations
# Used for: Retrying failed API calls, git operations
# Example: MAX_RETRY_ATTEMPTS=3
MAX_RETRY_ATTEMPTS=3

# Cache TTL in seconds
# Used for: Caching JIRA data, repository info
# Example: CACHE_TTL=3600
CACHE_TTL=3600

# Enable experimental features
# Used for: Testing new functionality
# Example: ENABLE_EXPERIMENTAL=false
ENABLE_EXPERIMENTAL=false
